<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader">
        <div class="loader-content">
            <div class="loader-logo">NIKE</div>
            <div class="loader-bar">
                <div class="loader-progress"></div>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar">
        <a href="/" class="nav-logo">NIKE</a>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/products">Products</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1 class="hero-title">JUST<br>DO IT.</h1>
            <p class="hero-subtitle">BREAK YOUR LIMITS</p>
            <a href="/products" class="cta-button">
                <span>SHOP NOW</span>
            </a>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="products-section">
        <h2 class="section-title">FEATURED</h2>
        <div class="products-grid">
            <% featuredProducts.forEach(product => { %>
                <a href="/product/<%= product.id %>" class="product-card" data-category="<%= product.category.toLowerCase() %>">
                    <img src="<%= product.images[0] || '/images/placeholder.png' %>" alt="<%= product.name %>" class="product-image floating">
                    <div class="product-info">
                        <h3 class="product-name"><%= product.name %></h3>
                        <p class="product-price">$<%= product.price %></p>
                    </div>
                </a>
            <% }); %>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section" style="padding: 8rem 5%; background: var(--nike-black); color: var(--nike-white); text-align: center;">
        <h2 style="font-size: 3rem; margin-bottom: 2rem; font-weight: 900;">THE FUTURE IS NOW</h2>
        <p style="font-size: 1.2rem; max-width: 600px; margin: 0 auto 3rem; opacity: 0.8;">
            Join millions of athletes worldwide who trust Nike to push their limits.
        </p>
        <a href="/about" class="cta-button" style="border-color: var(--nike-white);">
            <span>OUR STORY</span>
        </a>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>NIKE</h3>
                <p>Bring inspiration and innovation to every athlete* in the world.</p>
                <p style="margin-top: 1rem; font-size: 0.9rem; opacity: 0.6;">*If you have a body, you are an athlete.</p>
            </div>
            <div class="footer-section">
                <h3>Shop</h3>
                <ul class="footer-links">
                    <li><a href="/products">All Products</a></li>
                    <li><a href="/products?category=running">Running</a></li>
                    <li><a href="/products?category=basketball">Basketball</a></li>
                    <li><a href="/products?category=training">Training</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Company</h3>
                <ul class="footer-links">
                    <li><a href="/about">About Us</a></li>
                    <li><a href="#">Careers</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="#">Sustainability</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Newsletter</h3>
                <p style="margin-bottom: 1rem; opacity: 0.8;">Stay updated with new releases.</p>
                <form id="newsletter-form" class="newsletter-form">
                    <input type="email" placeholder="Your email" required class="newsletter-input">
                    <button type="submit" class="newsletter-btn">Subscribe</button>
                </form>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Nike, Inc. All Rights Reserved</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="/js/main.js"></script>
</body>
</html>